<resources>

    <!-- Base application theme. -->
    <style name="WallsTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="selectableItemBackgroundBorderlessCompat">?attr/selectableItemBackground</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Light"/>

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light"/>

    <style name="Walls.Text" parent="TextAppearance.AppCompat"/>

    <style name="Walls.TextAppearance.Tab" parent="TextAppearance.Design.Tab"/>

    <style name="Walls.Text.ToolbarTitle" parent="TextAppearance.AppCompat.Title">
        <item name="android:textColor">@color/black_87p</item>
    </style>

    <style name="Walls.Text.ToolbarTitle.Caps" parent="Walls.Text.ToolbarTitle">
        <item name="android:textAllCaps">true</item>
    </style>

    <style name="Walls.Text.Hint" parent="Walls.Text.Body1">
        <item name="android:lineSpacingMultiplier">1.1</item>
    </style>

    <style name="Walls.Text.Subhead" parent="Walls.Text">
        <item name="android:textSize">@dimen/font_medium</item>
        <item name="android:fontFamily">sans-serif-medium</item>
        <item name="android:textColor">@color/black_54p</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:paddingLeft">@dimen/spacing_medium</item>
        <item name="android:paddingRight">@dimen/spacing_medium</item>
    </style>

    <style name="Walls.Text.Body1" parent="TextAppearance.AppCompat.Body1">
        <item name="android:textColor">@color/black_87p</item>
    </style>

    <style name="Walls.Text.Body2" parent="TextAppearance.AppCompat.Body2">
        <item name="android:textColor">@color/black_87p</item>
    </style>

    <style name="Walls.Text.PhotoTitle" parent="Walls.Text">
        <item name="android:textSize">@dimen/font_xxxl</item>
        <item name="android:fontFamily">sans-serif-medium</item>
        <item name="android:maxLines">1</item>
        <item name="android:textColor">@color/black_87p</item>
    </style>

    <style name="Walls.Text.PhotoMetaText" parent="Walls.Text">
        <item name="android:maxLines">2</item>
        <item name="android:textSize">@dimen/font_large</item>
        <item name="android:ellipsize">middle</item>
        <item name="android:textColor">@color/black_87p</item>
    </style>

    <style name="Walls.Text.SingleListItem" parent="Walls.Text.Body1">
        <item name="android:textSize">@dimen/font_medium</item>
        <item name="android:textColor">@color/black_87p</item>
    </style>

</resources>
