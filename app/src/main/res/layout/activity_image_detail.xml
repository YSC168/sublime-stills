<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/windowBackground"
    android:orientation="vertical"
    tools:context="com.aashreys.walls.ui.ImageDetailActivity">

    <ScrollView
        android:id="@+id/parent"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:fillViewport="true"
        android:orientation="vertical"
        android:paddingBottom="@dimen/spacing_small"
        android:scrollbars="none"
        tools:context="com.aashreys.walls.ui.ImageDetailFragment">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:id="@+id/parent_image_info"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/image"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="8dp"
                    android:adjustViewBounds="true"
                    android:scaleType="fitXY"
                    android:visibility="invisible"/>

                <TextView
                    android:id="@+id/subhead_source"
                    style="@style/Walls.Text.Subhead"
                    android:layout_width="match_parent"
                    android:gravity="center_vertical"
                    android:text="@string/title_source"
                    android:visibility="invisible"/>

                <TextView
                    android:id="@+id/subhead_properties"
                    style="@style/Walls.Text.Subhead"
                    android:layout_width="match_parent"
                    android:gravity="center_vertical"
                    android:text="@string/title_properties"
                    android:visibility="invisible"/>

            </LinearLayout>

            <ProgressBar
                xmlns:android="http://schemas.android.com/apk/res/android"
                android:id="@+id/progress_bar"
                android:layout_width="@dimen/icon_xl"
                android:layout_height="@dimen/icon_xl"
                android:layout_gravity="center"
                android:indeterminate="true"
                android:orientation="vertical"/>

        </FrameLayout>

    </ScrollView>

    <LinearLayout
        android:id="@+id/parent_image_actions"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:animateLayoutChanges="true"
        android:background="@color/windowBackground"
        android:elevation="6dp"
        android:orientation="vertical"
        android:visibility="invisible">

        <com.aashreys.walls.ui.views.HintView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/spacing_small"
            app:hv_hint="@string/hint_image_actions"
            app:hv_seen_key="@string/tag_hint_image_actions"/>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="@dimen/spacing_small"
            android:paddingLeft="@dimen/spacing_xl"
            android:paddingRight="@dimen/spacing_xl"
            android:paddingTop="@dimen/spacing_small">

            <ImageButton
                android:id="@+id/button_favorite"
                android:layout_width="@dimen/image_button_size"
                android:layout_height="@dimen/image_button_size"
                android:background="?attr/selectableItemBackgroundBorderlessCompat"
                app:srcCompat="@drawable/ic_favorite_border_black_24dp"/>

            <FrameLayout
                android:layout_width="@dimen/image_button_size"
                android:layout_height="@dimen/image_button_size"
                android:layout_centerInParent="true">

                <ImageButton
                    android:id="@+id/button_share"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="?attr/selectableItemBackgroundBorderlessCompat"
                    app:srcCompat="@drawable/ic_share_black_24dp"/>

                <ProgressBar
                    android:id="@+id/progress_share"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@color/transparent"
                    android:indeterminate="true"
                    android:padding="@dimen/spacing_small"
                    android:visibility="gone"/>

            </FrameLayout>

            <FrameLayout
                android:layout_width="@dimen/image_button_size"
                android:layout_height="@dimen/image_button_size"
                android:layout_alignParentRight="true">

                <ImageButton
                    android:id="@+id/button_set_as"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="?attr/selectableItemBackgroundBorderlessCompat"
                    app:srcCompat="@drawable/ic_wallpaper_black_24dp"/>

                <ProgressBar
                    android:id="@+id/progress_set_as"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@color/transparent"
                    android:indeterminate="true"
                    android:padding="@dimen/spacing_small"
                    android:visibility="gone"/>

            </FrameLayout>

        </RelativeLayout>

    </LinearLayout>

</LinearLayout>
