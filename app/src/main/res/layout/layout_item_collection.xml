<?xml version="1.0" encoding="utf-8"?>
<merge
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <ImageView
        android:id="@+id/image_icon"
        android:layout_width="@dimen/image_source_icon_size"
        android:layout_height="@dimen/image_source_icon_size"
        android:padding="4dp" />

    <TextView
        android:id="@+id/text_title"
        style="@style/Walls.Text.ImageSourceItem"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:layout_weight="1"
        android:textSize="16sp" />

    <ImageButton
        android:id="@+id/button_remove"
        android:layout_width="@dimen/image_source_icon_size"
        android:layout_height="@dimen/image_source_icon_size"
        android:background="?attr/selectableItemBackgroundBorderlessCompat" />

    <ImageView
        android:id="@+id/handle"
        android:layout_width="@dimen/image_drag_handle_size"
        android:layout_height="@dimen/image_drag_handle_size"
        android:padding="@dimen/image_drag_handle_padding"
        app:srcCompat="@drawable/ic_drag_handle_black_24dp" />

</merge>