<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.aashreys.walls.ui.SettingsActivity">

    <android.support.design.widget.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <android.support.v7.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="@dimen/height_medium"/>

    </android.support.design.widget.AppBarLayout>

    <TextView
        android:id="@+id/text_reset_tips"
        style="@style/Walls.Text.SingleListItem"
        android:layout_width="match_parent"
        android:layout_height="@dimen/height_medium"
        android:background="?attr/selectableItemBackground"
        android:gravity="center_vertical"
        android:paddingLeft="@dimen/spacing_medium"
        android:paddingRight="@dimen/spacing_medium"
        android:text="@string/settings_reset_tips"/>

    <View style="@style/Walls.Divider"/>

</LinearLayout>
