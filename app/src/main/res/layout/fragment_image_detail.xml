<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/windowBackground"
    android:clickable="true"
    android:orientation="vertical">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="@color/windowBackground"
        android:fillViewport="true"
        android:orientation="vertical"
        android:scrollbars="none"
        tools:context="com.aashreys.walls.ui.ImageDetailFragment">

        <LinearLayout
            android:id="@+id/parent_image_info"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/image"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:adjustViewBounds="true"
                android:scaleType="fitXY"/>

            <TextView
                android:id="@+id/subhead_source"
                style="@style/Walls.Text.Subhead"
                android:layout_width="match_parent"
                android:layout_height="@dimen/subhead_height"
                android:gravity="center_vertical"
                android:text="@string/title_source"/>

            <TextView
                android:id="@+id/subhead_properties"
                style="@style/Walls.Text.Subhead"
                android:layout_width="match_parent"
                android:layout_height="@dimen/subhead_height"
                android:gravity="center_vertical"
                android:text="@string/title_properties"/>

        </LinearLayout>

    </ScrollView>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="8dp">

        <ImageButton
            android:id="@+id/button_favorite"
            android:layout_width="@dimen/button_size"
            android:layout_height="@dimen/button_size"
            android:layout_marginLeft="@dimen/image_fragment_button_margin"
            android:background="?attr/selectableItemBackgroundBorderlessCompat"
            app:srcCompat="@drawable/ic_favorite_border_black_24dp"/>


        <FrameLayout
            android:layout_width="@dimen/button_size"
            android:layout_height="@dimen/button_size"
            android:layout_centerInParent="true">

            <ImageButton
                android:id="@+id/button_share"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="?attr/selectableItemBackgroundBorderlessCompat"
                app:srcCompat="@drawable/ic_share_black_24dp"/>

            <ProgressBar
                android:id="@+id/progress_share"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/transparent"
                android:indeterminate="true"
                android:padding="@dimen/share_progress_bar_padding"
                android:visibility="gone"/>

        </FrameLayout>

        <FrameLayout
            android:layout_width="@dimen/button_size"
            android:layout_height="@dimen/button_size"
            android:layout_alignParentRight="true"
            android:layout_marginRight="@dimen/image_fragment_button_margin">

            <ImageButton
                android:id="@+id/button_set_as"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="?attr/selectableItemBackgroundBorderlessCompat"
                app:srcCompat="@drawable/ic_wallpaper_black_24dp"/>

            <ProgressBar
                android:id="@+id/progress_set_as"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/transparent"
                android:indeterminate="true"
                android:padding="@dimen/share_progress_bar_padding"
                android:visibility="gone"/>

        </FrameLayout>

    </RelativeLayout>

</LinearLayout>
