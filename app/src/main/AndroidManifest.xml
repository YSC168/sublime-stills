<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
          package="com.aashreys.walls">

    <uses-permission android:name="android.permission.INTERNET"/>
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE"/>

    <application
        android:name=".WallsApplication"
        android:allowBackup="false"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="false"
        android:theme="@style/WallsTheme">

        <activity
            android:name=".ui.MainActivity"
            android:label="@string/app_name">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>

                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>

        <activity
            android:name=".ui.CollectionsActivity"
            android:label="@string/title_fragment_collection"/>

        <activity android:name=".ui.ImageDetailActivity"/>

        <meta-data
            android:name="com.aashreys.walls.ui.utils.GlideConfiguration"
            android:value="GlideModule"/>

        <meta-data
            android:name="io.fabric.ApiKey"
            android:value="d1d9ded86a522d4ae7651fac61fdd2cba46ccc22"/>

    </application>

</manifest>